body    
    color: white;
    font-size: 67.5%;
    background-color: black;


#toggleCheckbox 
    display: none;
    &:checked + label + ul 
        visibility: hidden;
        opacity: 0;
    &:checked + label > padding 
        box-shadow: 0px 0px 5px #fff;
        border-radius: 50%;
    &:checked + label > p::before 
        transform: translate(-50%, -50%) rotate(90deg);
    &:checked + label > p::after 
        transform: translate(-50%, -50%) rotate(180deg);

#toggleButton
    cursor: pointer;
    z-index: 2;
    position: fixed;
    top: 40px;
    right: 30px;
    width: 50px;
    height: 50px;
    padding: 0;
    margin: 0;

    &::before, &::after 
        transition: all 0.6s;
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        background-color: #fff;
        height: 1px;
        width: 30px;
        transform: translate(-50%, -50%) rotate(-45deg);
    &::after 
        transform: translate(-50%, -50%) rotate(45deg);

ul 
    z-index: 1;
    transition: all 0.6s;
    position: fixed;
    top: 24px;
    right: 24px;
    background-color: hsla(0, 0%, 100%, 0.2);
    padding: 24px;
    border-radius: 5px;
    max-height: 80%;
    overflow-Y: scroll;
    &::before
        z-index: -1;
        position: absolute;
        content: '';
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        filter: blur(20px);
    & > li 
        padding-bottom: 14px;
        list-style-type: none;
    & > li:last-child
        padding-bottom: 0;

input 
    vertical-align: middle;

span 
    padding-left: 8px;

button
    width: 100%;

canvas 
    user-select: none;